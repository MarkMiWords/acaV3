{
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "127.0.0.1"
    },
    "functions": {
      "host": "127.0.0.1"
    },
    "hub": {
      "host": "127.0.0.1"
    },
    "ui": {
      "host": "127.0.0.1"
    },
    "logging": {
      "host": "127.0.0.1"
    },
    "eventarc": {
      "host": "127.0.0.1"
    },
    "tasks": {
      "host": "127.0.0.1"
    }
  }
}
